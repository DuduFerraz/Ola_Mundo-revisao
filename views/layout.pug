doctype html
html(lang="pt-BR")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
    style.
      body {
        font-family: 'Arial', sans-serif;
      }
      .header, .footer {
        background-color: #343a40;
        color: white;
        padding: 10px 0;
      }
      .header h1, .footer p {
        margin: 0;
      }
      .main-content {
        padding: 20px 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: calc(100vh - 120px); /* 100vh - altura do cabeçalho e rodapé */
      }

      img {
        height:50% ;
        width:50% ;
      }
  body
    // Cabeçalho
    header.header.text-center
      .container
        h1 Meu Site Incrível

    // Conteúdo Principal
    main.main-content
      .container.text-center
        block content

    // Rodapé
    footer.footer.text-center
      .container
        p &copy; 2024 Meu Site Incrível. Todos os direitos reservados.

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")




